    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@algolia/client-search": "^5.32.0",
    "@eslint/eslintrc": "~3.2.0",
    "@eslint/js": "~9.17.0",
    "@radix-ui/react-slot": "^1.1.1",
