      "prettier --write"
    ]
  },
  "resolutions": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.2",
    "algoliasearch": "^5.32.0",
    "@algolia/client-search": "^5.32.0",
    "search-insights": "^2.17.3"
  },
  "packageManager": "yarn@3.6.1"
